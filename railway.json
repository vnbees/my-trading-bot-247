{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install"
  },
  "deploy": {
    "startCommand": "node startRebalanceSpotBot.js --key=$BITGET_API_KEY --secret=$BITGET_API_SECRET --passphrase=$BITGET_PASSPHRASE --interval=4",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
